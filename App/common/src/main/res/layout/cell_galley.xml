<?xml version="1.0" encoding="utf-8"?>
<net.confide.common.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1dp"
    android:background="@color/white">

    <!--SquareLayout是一种正方形布局,用在RecyclerView的子项中-->
    <ImageView
        android:id="@+id/im_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"/>

    <!--遮罩层-->
    <View
        android:id="@+id/view_shade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_alpha_112"
        tools:visibility="visible"
        android:visibility="gone"/>

    <!--选中框-->
    <CheckBox
        android:id="@+id/cb_select"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:button="@drawable/sel_cb_circle"
        android:clickable="false"
        android:drawablePadding="0dp"
        android:enabled="false"
        android:padding="0dp"
        android:layout_gravity="end"
        android:layout_margin="@dimen/len_2"
        android:visibility="gone"
        tools:visibility="visible"
        android:buttonTint="@color/cb_gallery"
        tools:targetApi="21"/>

</net.confide.common.widget.SquareLayout>